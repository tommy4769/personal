<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="70dp"
        android:layout_y="45dp"
        android:text="名稱"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/edittext1"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_x="140dp"
        android:layout_y="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="65dp"
        android:layout_y="100dp"
        android:text="日期:"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/edittext2"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_x="140dp"
        android:layout_y="95dp"
        android:inputType="date" />

    <TextView
        android:id="@+id/heigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="65dp"
        android:layout_y="175dp"
        android:text="身高:"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/edittext3"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_x="145dp"
        android:layout_y="160dp"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="275dp"
        android:layout_y="175dp"
        android:text="cm"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="70dp"
        android:layout_y="240dp"
        android:text="體重:"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/edittext4"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_x="145dp"
        android:layout_y="230dp"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="285dp"
        android:layout_y="245dp"
        android:text="kg"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_x="-5dp"
        android:layout_y="310dp"
        android:gravity="center_horizontal"
        android:text="您的BMI值為"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_x="1dp"
        android:layout_y="380dp"
        android:textSize="10dp" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="285dp"
        android:layout_y="460dp"
        android:text="計算BMI" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="155dp"
        android:layout_y="459dp"
        android:text="刪除紀錄" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="25dp"
        android:layout_y="460dp"
        android:text="新增紀錄" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="25dp"
        android:layout_y="530dp"
        android:text="查詢資料" />

    <TextView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_x="4dp"
        android:layout_y="620dp"
        android:scrollbars="vertical" />


</AbsoluteLayout>